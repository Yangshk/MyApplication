    android:layout_height="match_parent">
    <Button
        android:id="@+id/dan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通"
        />
    <Button
        android:id="@+id/liebiaodandan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列表对话框"
        />
    <Button
        android:id="@+id/danxuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单选按钮"
        />
    <Button
        android:id="@+id/duoxuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多选按钮"
        />
</LinearLayout>